<%- include ("../partials/header") %>


<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <form method="POST">
                    <h2>Editar Séries</h2>
                    <div class="form-group">
                        <label for="name">Nome da Série:</label>
                        <input value="<%= serie.name %>" name="name" type="text" class="form-control"
                            id="exampleInputEmail1" aria-describedby="namelHelp" placeholder="Informe o nome">
                        <small id="nameHelp" class="form-text text-muted">Nome da Séria a ser salvo.</small>
                    </div>
                    <div class="form-group">
                        <label for="status"> Situação:</label>
                        <select class="form-control" id="status" name="status">
                            <% labels.forEach( label => { %>
                            <option value="<%= label.id %>" <% if(label.id === serie.status) { %> selected="selected"
                                <% } %>><%= label.name %></option>
                            <% }) %>

                        </select>
                    </div>
                    <button class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include ("../partials/footer") %>